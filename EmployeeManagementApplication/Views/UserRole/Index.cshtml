@model IEnumerable<EmployeeLibrary.Model.UserRole>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Index</h1>
<p>
    <a class="btn btn-primary me-2" asp-area="" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserRoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
 <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserRoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.LastName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserRoleId }, new { @class = "btn btn-sm btn-outline-primary me-2", title = "Edit" })
                    <img src="~/Images/icons8-edit.gif" alt="Edit" style="width: 20px; height: 20px;">
                    @Html.ActionLink("Details", "Details", new { id = item.UserRoleId }, new { @class = "btn btn-sm btn-outline-info me-2", title = "Details" })
                    <img src="~/Images/detailsgif.gif" alt="Details" style="width: 20px; height: 20px;">
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserRoleId }, new { @class = "btn btn-sm btn-outline-danger me-2", title = "Delete" })
                    <img src="~/Images/delete.gif" alt="Delete" style="width: 20px; height: 20px;">
                    @Html.ActionLink("GetByUser", "GetByUser", new { id = item.UserId }, new { @class = "btn btn-sm btn-outline-primary me-2", title = "Get By User" })
                    <img src="~/Images/getbyuser.gif" alt="Get By User" style="width: 25px; height: 25px;">
                    @Html.ActionLink("GetByRole", "GetByRole", new { id = item.RoleId }, new { @class = "btn btn-sm btn-outline-info me-2", title = "Get By Role" })
                    <img src="~/Images/getbyrole.png" alt="Get By Role" style="width: 25px; height: 25px;">

            </td>
        </tr>
}
</tbody>
</table>
<a class="btn btn-primary me-2" asp-area="" asp-controller="HomeIndexAdmin" asp-action="Index">Back to Home</a>

