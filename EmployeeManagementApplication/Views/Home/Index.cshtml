@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
      
        body {
            margin-bottom: 60px;
            background-image: url('../Images/bb.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }
        .container {
            max-width: 600px;
            margin: auto;
            padding-top: 100px; 
            padding-bottom: 100px; 
        }

        .welcome-heading {
            text-align: center;
            margin-bottom: 50px;
        }

            .welcome-heading h1 {
                font-size: 3.5rem; /* Adjusted font size */
                color: #4CAF50; /* Updated color to a vibrant green */
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); /* Adding a subtle text shadow for depth */
            }

        .btn-container {
            text-align: center;
            margin-top: 50px; /* Adjusted margin for better spacing */
        }

            .btn-container a {
                display: inline-block;
                margin: 10px;
                padding: 15px 40px; /* Increased padding for better button appearance */
                background-color: #007bff; /* Updated color to a vibrant blue */
                color: #fff;
                border-radius: 30px; /* Rounded corners for a modern look */
                text-decoration: none;
                font-weight: bold; /* Added bold font weight for better readability */
                transition: background-color 0.3s ease;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Adding a subtle box shadow for depth */
            }

                .btn-container a:hover {
                    background-color: #0056b3; /* Darker shade on hover for contrast */
                }

        .custom-select {
            /* Add your custom styles here */
            border: 1px solid #ced4da;
            border-radius: .25rem;
            padding: .375rem .75rem;
            font-size: 1rem;
            line-height: 1.5;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="welcome-heading">
            <h1 class="display-4 fw-bold">Welcome</h1> <!-- Updated heading size and font weight -->
        </div>
        <div class="btn-container">
            <a href="@Url.Action("Login", "User")" class="btn btn-primary btn-lg me-3">Login to your account</a> <!-- Updated button style to Bootstrap's primary color -->
            <a href="@Url.Action("Register", "User")" class="btn btn-success btn-lg">Register for New account</a> <!-- Updated button style to Bootstrap's success color -->
        </div>
    </div>
    

    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>