            <div class="form-group">
                <label asp-for="RoleSalary" class="control-label">Role Salary</label>
                <input asp-for="RoleSalary" class="form-control" required />
                <span asp-validation-for="RoleSalary" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary me-2" asp-area="" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

