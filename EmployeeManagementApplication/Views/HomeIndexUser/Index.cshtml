
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
       
        .grid-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            justify-content: center;
          padding-top:3%;
            padding-left: 10%;
            height: 200px;
            width: 1000px;
        }

        .card {
            height: 300px;
            
            
            display: flex;
            align-items: center;
            justify-content: center;
            background-size: cover;
        }

      

        .attendance {
            background-image: url("../Images/attendance2.jpg");
        }

        .payroll {
            background-image: url("../Images/payroll1-transformed.jpeg");
        }

        .card div {
            text-align: center;
            color: white;
            font-weight: bold;
        }
    </style>
</head>
<body>
  <header style="padding-top:2%">
      
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3" style="width: 100%; margin-left: 0; margin-right: 0;">
            <div class="container-fluid" style="background-color:darkcyan; padding-left: 0; padding-right: 0;">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Employee Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">


                        </li>
                    </ul>
                    <!--<a class="nav-link text-white" asp-area="" asp-controller="Logout" asp-action="Index">LogOut</a>-->
                    <a href="@Url.Action("Logout", "User")" class="nav-link text-white">Log Out</a> <!-- Updated button style to Bootstrap's primary color -->

                </div>
            </div>
        </nav>

    </header>
    

    <div class="grid-container" >
       
        <a  asp-area="" asp-controller="Attendance" asp-action="GetByUser">
            <div class="card attendance">
                <div style="text-align: center;color: black;padding-left:5%;padding-bottom:55%" >ATTENDANCE</div>
            </div>
        </a>

        <a  asp-area="" asp-controller="Payroll" asp-action="GetByUser">
            <div class="card payroll">
                <div style="text-align: center;color: black;padding-left:2%;padding-bottom:55%" >PAYROLL</div>
            </div>
        </a>
    </div>
</body>
</html>
